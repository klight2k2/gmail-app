<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="?attr/selectableItemBackground"
android:padding="10dp"
    >
<androidx.cardview.widget.CardView
    android:id="@+id/avatar_container"
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:cardCornerRadius="30dp"
    android:layout_marginRight="16dp"
>
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/thumb1" />
</androidx.cardview.widget.CardView>
<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_toEndOf="@id/avatar_container"
    android:background="@drawable/important"
    android:id="@+id/important_btn"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@id/important_btn"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20dp"
        tools:text="gfdgdfgfcccccccccccccccccccccccccccccccccccccccccc" />


    <TextView
        android:id="@+id/title"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/avatar_container"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:textColor="#7D7F81"
        android:textSize="16sp"

        tools:text="Hello wrod" />

    <TextView
        android:id="@+id/content"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@id/avatar_container"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:textColor="#7D7F81"
        tools:text="hello" />
<TextView
    android:id="@+id/date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:text="12:00pm" />
<ImageView
    android:layout_width="32dp"
    android:background="@drawable/star"
    android:layout_height="32dp"
    android:layout_below="@id/title"
    android:layout_alignParentRight="true"

    android:id="@+id/star_btn"/>

</RelativeLayout>